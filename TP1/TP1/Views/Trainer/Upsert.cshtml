@model JuliePro_DataModels.Entities.TrainerVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3 DivBgForm" >
    <form class="form-horizontal" method="post" enctype="multipart/form-data" >
        <div class="row p-3 ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 border-bottom container rounded p-2">
                <input type="hidden" asp-for="Trainer.Id" />
                <h2 class="text-primary">Create an Author</h2>
            </div>

            <div class="col-7 pt-2" >
                <div class="form-group row">
                    <div class="col-2" >
                        <label>FIRSTNAME</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Trainer.FirstName" class="form-control"/>
                        <span asp-validation-for="Trainer.FirstName" class="text-danger"></span>
                    </div> 
                </div>

                <div class="form-group row" style="padding:5px">
                    <div class="col-2">
                        <label>LASTNAME</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Trainer.LastName" class="form-control" />
                        <span asp-validation-for="Trainer.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="padding:5px">
                    <div class="col-2">
                        <label>EMAIL</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Trainer.AuthorEmail" class="form-control" />
                        <span asp-validation-for="Trainer.AuthorEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="padding:5px">
                    <div class="col-2">
                        <label>BIOGRAPHY</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Trainer.Biographie" class="form-control text-right summernote"></textarea>
                        <span asp-validation-for="Trainer.Biographie" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="padding:5px">
                    <div class="col-2">
                        <label>LISTE SPECIALITÉ</label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(p => p.Trainer.Speciality_Id, Model.SpecialityList.OrderBy(p => p.Text), "Select a Speciality",new {@class="form-control"})
                        <span asp-validation-for="Trainer.Speciality_Id" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="padding:5px">
                    <div class="col-8 offset-2">
                        <form asp-action="Upsert">
                            <div class="form-group">
                                <partial name="_CreatePartialView" />
                            </div>
                        </form>                  
                    </div>
                </div>
            </div>

            <div class="col-5 border pt-2">
                <div class="col-12 pt-2">
                    <div class="form-group row pt-1">
                        <div class="col-2">
                            <label>PHOTO</label>
                        </div>
                        <img class="card-img-top img-fluid d-block mx-auto mb-3" style="padding:10px" src="/images/imagesLayout/JulioProImage.png" />
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                <script>
        $(document).ready(function () {
                $('.summernote').summernote();
            });
        </script>

}